<!DOCTYPE html>
<html>
<head>
  <title>SimpleMusicDb</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if current_user %>
  <%= link_to 'Logout', user_session_path, :method => :delete %>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'Sign up', new_user_path %> 
<% end %>

<% if flash[:notice] %>
  <div class='notice'><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div class='error'><%= flash[:error] %></div>
<% end %>

<%= yield %>

</body>
</html>
